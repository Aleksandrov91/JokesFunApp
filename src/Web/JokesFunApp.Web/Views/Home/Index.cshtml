@model JokesFunApp.Services.Models.Home.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var joke in Model.Jokes)
    {
        <div class="col-md-3 mb-3">
            <div class="card">
                <div class="card-body">
                    <p class="card-text">@joke.Content</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">
                        @joke.CategoryName
                        <a class="btn btn-primary btn-sm" asp-controller="Jokes" asp-action="Details" asp-route-id="@joke.Id">View</a>
                    </small>
                </div>
            </div>
        </div>
    }
</div>